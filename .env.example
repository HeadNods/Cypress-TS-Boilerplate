# Environment Configuration
# Copy this file to .env and update with your values
# .env is gitignored by default

# Base URL for your application under test
CYPRESS_BASE_URL=https://example.com

# API endpoint (if testing API interactions)
CYPRESS_API_URL=https://api.example.com

# Test user credentials (for development/staging only - NEVER use production credentials)
CYPRESS_TEST_USER_EMAIL=test@example.com
CYPRESS_TEST_USER_PASSWORD=testpassword123

# Environment identifier
CYPRESS_ENVIRONMENT=staging

# Timeout configurations (in milliseconds)
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_PAGE_LOAD_TIMEOUT=30000

# Feature flags (if your app uses feature toggles)
CYPRESS_FEATURE_NEW_UI=true
CYPRESS_FEATURE_BETA_MODE=false

# External service endpoints (if needed for testing)
CYPRESS_AUTH_SERVICE_URL=https://auth.example.com
CYPRESS_PAYMENT_SERVICE_URL=https://payment.example.com

# Custom application-specific variables
# Add any custom environment variables your tests need here
