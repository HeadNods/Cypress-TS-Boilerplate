{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["cypress", "node"],
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["cypress/page-object-model/pages/*"],
      "@pom/*": ["cypress/page-object-model/*"]
    }
  },
  "include": ["cypress/**/*.ts"],
  "exclude": ["node_modules"]
}